{
  "version": "1.0.0",
  "configurations": [
    {
      "name": "Dev Server",
      "type": "node-terminal",
      "request": "launch",
      "command": "bun run dev --host --port 5174",
      "cwd": "${workspaceFolder}",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      }
    }
  ]
}
